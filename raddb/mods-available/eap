eap {

	default_eap_type = tls

	tls-config tls-common {

		private_key_password = $ENV{PRIVATE_KEY_PASSWORD}
		private_key_file = ${certdir}/private/server.key
		certificate_file = ${certdir}/issued/server.crt
		ca_file = ${cadir}/ca.crt
		dh_file = ${certdir}/dh.pem
		ca_path = ${cadir}
		cipher_list = "HIGH"
		ecdh_curve = "prime256v1"

		verify {
			tmpdir = /tmp/radiusd
			client = "/usr/bin/openssl verify -CAfile ${..ca_file} %{TLS-Client-Cert-Filename}"
		}

	}

	tls {
		tls = tls-common
	}

}
